{
  "manifest_version": 2,
  "name": "The Mouse Pointer Change",
  "description": "Mpuse Pointer/Cursor Icon",
  "version": "1.0.0",
  "background" : {
    "scripts" : [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["extension.css"],
      "js": ["extension.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    "extension.css",
    "cursor.png",
    "cursor@2x.png"
  ],
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "activeTab",
    "storage"
  ]
}
